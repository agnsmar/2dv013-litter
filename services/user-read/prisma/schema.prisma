// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int           @id @default(autoincrement())
  email       String        @unique(map: "email_UNIQUE")
  username    String        @unique(map: "username_UNIQUE")
  password    String
  profile     Profile?  
  followers   Following[]   @relation("followee")
  followees   Following[]   @relation("follower")
  created_at  DateTime      @default(now()) @db.DateTime(0)
}

model Profile {
  id          Int       @id @default(autoincrement())
  owner       User      @relation(fields: [user_id], references: [id], onDelete: Cascade)
  user_id     Int       @unique
  content     String?   @default("")
  avatar      String?   @default("https://i.imgur.com/VAIIdrg.png")
}

model Following {
  follower      User    @relation("follower", fields: [follower_id], references: [id], onDelete: Cascade)
  follower_id   Int
  followee      User    @relation("followee", fields: [followee_id], references: [id], onDelete: Cascade)
  followee_id   Int

  @@id([follower_id, followee_id])
}
