generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:localdevpassword@sphynx-lits-mysql-secondary:3306/my_database"
}
// "mysql://root:localdevpassword@sphynx-lits-mysql-primary:3306/my_database"
model lit {
  id         Int        @id @default(autoincrement())
  content    String     @db.VarChar(42)
  user_id    Int        
  created_at DateTime   @default(now()) @db.DateTime(0)
  updated_at DateTime   @default(now()) @updatedAt
}
